<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/albumitemcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/imageAlbumItem"
            android:layout_width="180dp"
            android:background="?attr/colorOnPrimary"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_folder_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/albumNameTextView"
        android:layout_below="@+id/albumitemcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:text="Album"/>
    <CheckBox
        android:id="@+id/checkBoxAlbumItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/albumNameTextView"
        android:layout_alignEnd="@+id/albumitemcard"
        />

</RelativeLayout>